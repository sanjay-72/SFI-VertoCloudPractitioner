<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- J Query CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <!-- font awesome fonts  -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <!-- My CSS link -->
    <link rel="stylesheet" href="/styles.css">

    <!-- Loader CSS link -->
    <link rel="stylesheet" href="/loaderStyle.css">

    <style>
        h6 {
            text-align: left;
            margin: 15px;
        }

        .costPrice {
            font-size: 1.4rem;
            color: blue;
        }

        .hidden {
            opacity: 0;
            filter: blur(5px);
            transform: translateX(-100%);
            transition: all 0.5s;
        }

        .show {
            opacity: 1;
            filter: blur(0);
            transform: translateX(0);
            transition: all 0.5s;
        }


        .hidden:nth-child(2) {
            transition-delay: 100ms;
        }

        .hidden:nth-child(3) {
            transition-delay: 200ms;
        }

        .hidden:nth-child(4) {
            transition-delay: 300ms;
        }

        @media(max-width:380px) {
            .myProductBox {
                width: 100%;
                height: auto;
                margin: 0;
            }

            .myProductBox img {
                width: 100%;
                height: auto;
            }

            .narrow {
                width: 100%;
                height: auto;
                margin: 0;
            }

            h2,
            h6 {
                font-size: 100%;
                margin: 0;
                margin-bottom: 5px;
            }

            .costPrice {
                font-size: 75%;
            }

            .btn {
                font-size: 75%;
            }
        }
    </style>
    <title>Fruitful-Market</title>
</head>

<body style="overflow-y: hidden;">
    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <!-- Nav Bar start -->
    <div style="position: static;" class="MyNavDiv">
        <h2>Fruit<span>Ful</span></h2>
        <a href="/"><button>Home</button></a>
        <a href="#"><button>Agri-IOT</button></a>
        <a href="/market"><button style="background-color: green;color: white;">Sell/Buy</button></a>
        <a href="/newProduct"><button>Sell Online</button></a>
        <a href="/myProducts"><button>My Products</button></a>
    </div>
    <!-- Nav Bar End  -->

    <!-- Deals Count  -->
    <h1>
        Total deals found = <%= productList.length %>
    </h1>

    <div style="margin: 15px;" id="productsContainer" class="mainMarketDiv">
        <h6>
            Sort by :
            <span style="color: rgb(0, 107, 0);">
                <%=sortingKey%>
            </span>
            <form action="?sort=this.sort.value" method="get" style="display: inline-block;">
                <select name="sort" onchange=this.form.submit()>
                    <option value="Relevant">Change Here</option>
                    <option value="PriceLowToHigh">Price Low to High</option>
                    <option value="PriceHighToLow">Price High to Low</option>
                    <option value="LatestFirst">Latest First</option>
                    <option value="OldestFirst">Oldest First</option>
                </select>
            </form>
        </h6>
        <% for(var i=0; i<productList.length; i++) {%>
            <div class="myProductBox hidden">
                <img src="./../images/Products/<%= productList[i].ProductName %>.jpg"
                    alt="<%= productList[i].ProductName %> Image">
                <h2>
                    <%= productList[i].ProductName %>
                </h2>
                <h4><span class="costPrice">(â‚¹<%= productList[i].cost %>/Kg)<span></h4>
                <p class="breakAll narrow">
                    <%= productList[i].Description %>
                </p>
                <a target="__blank"
                    href="contactSeller/<%= productList[i].Mobile %>/<%= productList[i].ProductId %>"><button
                        class="btn btn-outline-success">Contact Seller</button></a>
            </div>
            <% } %>
    </div>


    <!-- Bootstrap JS CDN link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

    <!-- JQuery Link  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- LoaderJs file Link  -->
    <script src="/loaderAnimation.js"></script>

    <!-- JavaScript link -->
    <script src="/mainMarket.js"></script>
    <script src="/index.js"></script>
</body>

</html>