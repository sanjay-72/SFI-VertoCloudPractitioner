                        <option value="Guava">Guava</option>
                        <option value="Mango">Mango</option>
                        <option value="Mirchi">Mirchi</option>
                        <option value="Paddy">Paddy</option>
                        <option value="Potato">Potatoes</option>
                        <option value="Tea">Tea leafs</option>
                        <option value="Tomato">Tomatoes</option>
                        <option value="Wheat">Wheat</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="input-wrapper">
                    <label for="Variety" class="hiddenInput">Variety: *</label><br>
                    <select name="Variety" id="VarietyID" class="hiddenInput">
                        <option value="Normal">Normal</option>
                    </select>
                </div>
                <div class="input-wrapper hide">
                    <label for="OtherName" class="hide" id="otherLabel">Other Name: *</label><br>
                    <input name="OtherName" class="hide" type="text" id="otherField" value="Something"
                        placeholder="Name of your product" required spellcheck="false" autocomplete="off">
                </div>
                <div class="input-wrapper">
                    <label for="Description" class="hiddenInput">Description (max 150 characters): *</label><br>
                    <textarea name="Description" id="DescriptionField" cols="30" rows="4" autocomplete="off"
                        spellcheck="false" autocomplete="off" maxlength="150" required
                        placeholder="Enter description of the crop" class="hiddenInput" autofocus></textarea>
                </div>
                <div class="input-wrapper">
                    <label for="Cost" class="hiddenInput">Cost (per Kg) ₹: *</label><br>
                    <input name="Cost" class="hiddenInput" type="number" min="20" step="0.01" value="" id="CostField"
                        placeholder="Please enter selling price" required spellcheck="false" autocomplete="off">
                </div>
                <div class="input-wrapper">
                    <label for="Quantity" class="hiddenInput">Quantity: *</label><br>
                    <input type="number" class="hiddenInput" min="15" max="1000" name="Quantity" value="" required
                        placeholder="Quantity in KGs" spellcheck="false" autocomplete="off">
                </div>
                <div class="input-wrapper">
                    <label for="Location" class="hiddenInput">Location: *</label><br>
                    <input name="Location" class="hiddenInput" type="text" value="" id="locationField"
                        placeholder="Please enter valid address" required spellcheck="false" autocomplete="off">
                </div>
                <div class="input-wrapper">
                    <label for="deviceUsed" class="hiddenInput">Choose Sensor area: *</label><br>
                    <select name="deviceUsed">
                        <option value="NA">NA</option>
                        <% for(let i=0;i<sensors.length;i++) { %>
                            <option value="<%=sensors[i].Link%>">
                                <%=sensors[i].deviceName%>
                            </option>
                            <% } %>
                    </select>
                </div>
                <button class="myLoginBtn hiddenInput" type="submit" id="SubmitButton"><strong>Add to
                        market</strong></button>

            </form>

            <!-- Box for inputs end -->
        </div>
        <!-- Footer text start -->
        <h3 id="nameTextEng" class="hiddenInput">©️ Fruitful technologies.</h3>
        <!-- Footer text end -->
    </div>


