        .hiddenContainer {
            opacity: 0;
            filter: blur(5px);
            transform: translateX(-100%);
            transition: all 0.5s;
        }

        .hiddenInput {
            filter: blur(2px);
            opacity: 0;
        }

        .show {
            opacity: 1;
            filter: blur(0);
            transform: translateX(0);
            transition: all 0.5s;
        }

        .shownInput {
            opacity: 1;
            filter: blur(0);
