<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- J Query CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <!-- font awesome fonts  -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <!-- My CSS link -->
    <link rel="stylesheet" href="/styles.css">

    <!-- Favicon Link  -->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- Loader CSS link -->
    <link rel="stylesheet" href="/loaderStyle.css">

    <style>
        h6 {
            text-align: left;
            margin: 15px;
        }

        .deviceGraph {
            display: inline-block;
            padding: 12px;
            width: 468px;
            height: 260px;
            border: 1px solid black;
            border-radius: 12px;
            margin: 15px;
        }

        .GraphFrame {
            width: 100%;
            height: 100%;
        }

        @media(max-width:380px) {

            h2,
            h6 {
                font-size: 100%;
                margin: 0;
                margin-bottom: 5px;
            }
        }

        @media(max-width:560px) {
            .deviceGraph {
                width: 90%;
                height: auto;
            }

            .GraphFrame {
                width: 100%;
                height: 100%;
            }
        }
    </style>
    <title>Fruitful-Market</title>
</head>

<body style="overflow-y: hidden;">
    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <!-- Nav Bar start -->
    <div style="position: static;" class="MyNavDiv">
        <h2>Fruit<span>Ful</span></h2>
        <a href="/"><button>Home</button></a>
        <a href="/IOT"><button style="background-color: green;color: white;">Agri-IOT</button></a>
        <a href="/market"><button>Sell/Buy</button></a>
        <a href="/newProduct"><button>Sell Online</button></a>
        <a href="/myProducts"><button>My Products</button></a>
    </div>
    <!-- Nav Bar End  -->

    <!-- Deals Count Start  -->
    <h1>
        Total Devices found in your account = <%= deviceList.length %>
    </h1>
    <h3>Please contact us for any changes.</h3>
    <!-- Deals Count end  -->

    <div style="margin: 15px;" class="mainMarketDiv">
        <% for(var i=0; i<deviceList.length; i++) {%>
            <div class="deviceGraph">
                <iframe src="<%= deviceList[i] %>" class="GraphFrame" frameborder="0"></iframe>
            </div>
            <% } %>
    </div>


    <!-- Bootstrap JS CDN link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

    <!-- JQuery Link  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- LoaderJs file Link  -->
    <script src="/loaderAnimation.js"></script>

    <!-- JavaScript link -->
    <script src="/index.js"></script>
</body>

</html>