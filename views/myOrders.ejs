<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- font awesome fonts  -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <!-- Bootstrap JS CDN link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

    <!-- Loader CSS link -->
    <link rel="stylesheet" href="/loaderStyle.css">

    <!-- Favicon Link  -->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- My CSS link -->
    <link rel="stylesheet" href="/styles.css">

    <style>
        h6 {
            text-align: left;
            margin: 15px;
        }

        .costPrice {
            font-size: 1.4rem;
            color: blue;
        }

        .hidden {
            opacity: 0;
            filter: blur(5px);
            transform: translateX(-100%);
            transition: all 0.5s;
        }

        .show {
            opacity: 1;
            filter: blur(0);
            transform: translateX(0);
            transition: all 0.5s;
        }

        @media(max-width:380px) {
            .myProductBox {
                height: auto;
                margin-left: 30px;
            }

            .myProductBox img {
                width: 100%;
                height: auto;
            }

            .narrow {
                width: 100%;
                height: auto;
                margin: 0;
            }

            h2,
            h6 {
                font-size: 100%;
                margin: 0;
                margin-bottom: 5px;
            }

            .costPrice {
                font-size: 75%;
            }

            .btn {
                font-size: 75%;
            }
        }
    </style>

    <title>üçíFruitfulüçä</title>
</head>

<body style="overflow: hidden; text-align: left;">
    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <div class="MyNavDiv" id="MyNavTitle">
        <h2 style="margin: 0;">Fruit<span>Ful</span></h2>
        <div style="background-color: rgb(44, 185, 44);">
            <h3 style="margin:0">Welcome dear <span style="color: rgb(168, 255, 165);"> <strong>
                        <%=name%>
                    </strong>
                </span>
            </h3>
        </div>
    </div>
    <!-- Nav Bar start -->
    <div class="MyNavDiv" id="NavBar">
        <div class="container">
            <a href="/"><button>Home</button></a>
            <a href="/IOT"><button>Agri-IOT</button></a>
            <a href="/market"><button>Sell/Buy</button></a>
            <a href="/newProduct"><button>Sell Online</button></a>
            <a href="/myProducts"><button style="background-color: green;color: white;">My
                    Products</button></a>
        </div>
    </div>
    <!-- Nav Bar End  -->

    <div>
        <h5 style="margin: 15px;">Total Your orders found = <%= productList.length %> (latest first)
        </h5>
        <div style="text-align: center;" class="pb-4">
            <a href="/myProducts"><button class="btn btn-outline-success m-2 mb-0">My Products</button></a>

            <a href="/ordersReceived"><button class="btn btn-outline-success m-2 mb-0">Orders Received</button></a>

            <button disabled style="background-color: rgb(0, 121, 0);color: white;opacity: 100%;"
                class="btn btn-outline-success m-2 mb-0">My Orders</button>

            <a href="/newProduct"><button class="btn btn-outline-success m-2 mb-0">Add new
                    Product</button></a>
        </div>

        <div style="text-align: center; margin: 15px; margin-left: -15px;">
            <% for(var i=0; i<productList.length; i++) {%>
                <div class="myProductBox hidden markerDiv">
                    <img src="./../images/<%= myPictures[Math.floor(Math.random() * myPictures.length)] %>/<%= productList[i].ProductName %>.jpg"
                        alt="<%= productList[i].ProductName %> Image">
                    <% if(productList[i].ProductName=="Other" ){ %>
                        <h2>
                            <%= productList[i].OtherName %>
                        </h2>
                        <% }else{ %>
                            <h2>
                                <%= productList[i].ProductName %>
                            </h2>
                            <% } %>
                                <h4><span class="costPrice">(‚Çπ<%= productList[i].cost %>/Kg)<span></h4>
                                <p style="margin-bottom: 0;">Seller Name : <%= productList[i].SellerName %>
                                </p>
                                <p style="margin-bottom: 0;">Quantity : <%= productList[i].Quantity %>Kg(s)
                                </p>
                                <p>Mobile : <%= productList[i].SellerMobile %>
                                </p>
                </div>
                <% } %>
                    <% if(productList.length> 0) { %>
                        <div style="text-align: center; padding-left: 30px;">
                            <button type="submit" class="btn btn-outline-danger" id="checkBtn">Mark as
                                Completed</button>
                        </div>
                        <% } %>

        </div>
    </div>


    <%- include("footer") -%>

        <!-- Vanilla tilt -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.min.js"
            integrity="sha512-SttpKhJqONuBVxbRcuH0wezjuX+BoFoli0yPsnrAADcHsQMW8rkR84ItFHGIkPvhnlRnE2FaifDOUw+EltbuHg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <!-- JQuery Link  -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <!-- LoaderJs file Link  -->
        <script src="/loaderAnimation.js"></script>

        <!-- JavaScript link -->
        <script src="/customerProductsView.js"></script>
</body>

</html>